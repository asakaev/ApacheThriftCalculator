{%
  set thrift_to_definition = {
    2: 'BOOL',
    3: 'I08',
    6: 'I16',
    8: 'I32',
    10: 'I64',
    4: 'DOUBLE',
    11: 'STRING',
    13: 'MAP',
    15: 'LIST'
  }
%}

{%
  set thrift_to_javascript = {
    2: 'boolean',
    3: 'number',
    3: 'number',
    4: 'number',
    6: 'number',
    8: 'number',
    10: 'number',
    11: 'string',
    13: 'Object',
    14: 'Array',
    15: 'Array',
    16: 'string',
    17: 'string'
  }
%}


{% macro printThrift(field) -%} 
  {% if field.structure -%}
    '{{ field.structure }}'
  {%- else -%}
    thrift.definition.Type.{{ thrift_to_definition[field.base_type] }}
  {%- endif %}
{%- endmacro %}

{% macro printThriftIfExist(field) -%}
  {% if field %}, 
    {{ printThrift(field) }} 
  {%- endif %}
{%- endmacro %}


{% macro printJs(field) -%}
  {% if field.required %}!{% else %}?{% endif -%}
  {% if field.structure -%}
    types.{{ field.structure }}
  {%- elif thrift_to_javascript[field.base_type] -%}
    {{ thrift_to_javascript[field.base_type] }}
  {%- else -%}
    *
  {%- endif%}
{%- endmacro %}